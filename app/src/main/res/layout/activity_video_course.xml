<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:orientation="vertical"
    tools:context=".Activities.VideoCourseActivity">
  <FrameLayout
    android:id="@+id/video_layout"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:background="@android:color/black">

    <com.universalvideoview.UniversalVideoView
      android:id="@+id/videoView"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_gravity="center"
      app:uvv_autoRotation="false"
      app:uvv_fitXY="false" />

    <com.universalvideoview.UniversalMediaController
      android:id="@+id/media_controller"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:visibility="invisible"
      app:uvv_scalable="true" >

    </com.universalvideoview.UniversalMediaController>

    <ProgressBar
      android:id="@+id/progressBar"
      style="?android:attr/progressBarStyle"
      android:layout_width="wrap_content"
      android:layout_gravity="center"
      android:layout_height="wrap_content" />

  </FrameLayout>
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="22dp"
    android:orientation="vertical">
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/COLOR_BLACK_GREY"
      android:text="Lección" />
    <TextView
      android:id="@+id/title"
      android:textStyle="bold"
      android:textSize="22dp"
      android:textColor="@color/COLOR_BLACK"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="¿Qué es el estrés?" />
    <TextView
      android:layout_marginTop="15dp"
      android:textColor="@color/COLOR_BLACK_GREY"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Duración" />
    <TextView
      android:textStyle="bold"
      android:textColor="@color/COLOR_BLACK"
      android:id="@+id/txtDuracion"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="00:00" />
    <TextView
      android:layout_marginTop="15dp"
      android:textColor="@color/COLOR_BLACK_GREY"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Descripción" />
    <TextView
      android:textStyle="bold"
      android:textColor="@color/COLOR_BLACK"
      android:id="@+id/description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="El estrés es algo que ..." />
  </LinearLayout>
</LinearLayout>
