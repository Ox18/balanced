<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.LobbyProfesionalActivity">
    <LinearLayout
        android:layout_marginTop="22dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:showDividers="middle"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#8f9295"
                android:textStyle="bold"
                android:id="@+id/txtWelcome"
                android:textSize="15dp"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/profile_circle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:background="@drawable/layout_image_profile_profesional">
            <TextView
                android:id="@+id/logoLetter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="22dp"
                android:gravity="center"
                android:textColor="#fff"
                android:text="" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:textSize="22dp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Tu servicios" />
            <Button
                android:background="@drawable/layout_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar"
                android:id="@+id/btnAgregar"
                android:textColor="#ffffff" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPreviewCourses"
            android:layout_marginTop="22dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/card_preview_course" />
    </LinearLayout>
</LinearLayout>