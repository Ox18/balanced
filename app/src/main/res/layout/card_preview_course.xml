<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:id="@+id/LinearLayoutCourse"
    android:padding="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardImagenDeCurso"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtNombreDeCurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#494b4d"
            android:text="Burguer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
              android:visibility="gone"
                android:id="@+id/txtStatusCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#5bed77"
                android:textSize="10dp"
                android:layout_marginRight="8dp"
                android:text="SUPER" />
            <TextView
                android:id="@+id/txtNameProfesional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#cacfce"
                android:textSize="10dp"
                android:text="Wilmer Delgado" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
              android:visibility="gone"
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#a6aaab"
                android:textSize="13dp"
                android:layout_marginRight="8dp"
                android:text="30 - 40 min" />
            <TextView
                android:visibility="gone"
                android:id="@+id/txtPriceAditional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#a6aaab"
                android:textSize="13dp"
                android:layout_marginRight="8dp"
                android:text="0 S/." />
            <TextView
                android:id="@+id/txtRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#a6aaab"
                android:textSize="13dp"
                android:layout_marginRight="8dp"
                android:text="4.9" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
