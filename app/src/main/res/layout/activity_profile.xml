<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/COLOR_WHITE"
    tools:context=".Activities.ActivityProfile">
    <LinearLayout
        android:background="@color/COLOR_WHITE"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_marginBottom="40dp">
        <TextView
            android:id="@+id/txtVolver"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Volver" />
        <TextView
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="Profile" />
        <TextView
            android:id="@+id/txtGuardar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Done" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/profile_circle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:background="@drawable/layout_image_profile">
            <TextView
                android:id="@+id/logoLetter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="32dp"
                android:gravity="center"
                android:textColor="#fff"
                android:text="" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="22dp"
        android:padding="40dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:height="50dp"
            android:background="@drawable/box_grey_light"
            android:hint="Nombres"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#B1BCBE"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/edtCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:background="@drawable/box_grey_light"
            android:hint="Correo"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#B1BCBE"
            android:layout_marginBottom="10dp"
            android:textSize="14dp" />
        <EditText
            android:id="@+id/edtDNI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:background="@drawable/box_grey_light"
            android:hint="DNI  "
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#B1BCBE"
            android:layout_marginBottom="10dp"
            android:textSize="14dp" />
        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="50dp"
            android:background="@drawable/box_grey_light"
            android:hint="PHONE"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#B1BCBE"
            android:layout_marginBottom="10dp"
            android:textSize="14dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">
            <Button
                android:id="@+id/btnChangePassword"
                android:background="@drawable/box_blue"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Solicitar cambio de contraseña"
                />
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/btnDeleteAccount"
                android:background="@drawable/box_red"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminar cuenta"
                />
            <Button
                android:id="@+id/btnCerrarSesion"
                android:layout_marginTop="10dp"
                android:background="@drawable/box_black"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cerrar sesión"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>